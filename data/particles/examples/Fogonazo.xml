					x0 = "0.0"
					y0 = "0.0"
					z0 = "0.0"
					normalx = "0.0"
				        normaly = "1.0" 
					normalz = "0.0"

					OuterRadius = "0.5"
					InnerRadius = "0.0" />
	
				<VELOCITY>
					<DOMAIN type = "SPHERE"
						x0 = "0.0"
						z0 = "0.0"
						y0 = "0.0"
						x1 = "0.0"
						z1 = "0.0"
						y1 = "0.0"					
