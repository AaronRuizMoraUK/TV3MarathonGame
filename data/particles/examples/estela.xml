<SYSTEM_DEFINITION name = "estela">
	<SUBSYSTEM max = "50" particleColorFactor = "1.0" >
		<TEXTURE diffuse = "particula2.dds" />
		<SOURCE particle_rate = "20">
			<DOMAIN type = "DINAMIC_LINE" 
				x0 = "0.0"
				y0 = "0.0"
				z0 = "0.0"
				x1 = "0.0"
				y1 = "2.0"					
				z1 = "0.0"
			       	/>

			<VELOCITY>
				<DOMAIN type = "CYLINDER"
					x0 = "0.0"
					y0 = "0.0"
					z0 = "0.0"
					x1 = "0.0"
					y1 = "0.0"				
					z1 = "0.0"
					OuterRadius = "0.1"
				       	InnerRadius = "0.0"	/>	       
			</VELOCITY>
			<COLOR>
				<DOMAIN type = "POINT" 
					x0 = "0.5"
					y0 = "0.5" 
					z0 = "1.0" />
				<DOMAIN type = "POINT" 
					x0 = "0.5"
					z0 = "0.5"
					y0 = "0.5" />
			</COLOR>
			<SIZE>
				<DOMAIN type = "POINT" 
					x0 = "1.0"
					z0 = "1.0"
					y0 = "1.0" />
			</SIZE>
		</SOURCE>
		<GRAVITY>
			<DOMAIN type = "POINT" 
				x0 = "0.0"
				z0 = "0.0"
				y0 = "0.0" />
		</GRAVITY>
		
		<RANDOMACCEL>
			<DOMAIN type = "CYLINDER"
				x0 = "0.0"
				y0 = "-0.5"
				z0 = "0.0"
				x1 = "0.0"
				y1 = "0.5"				
				z1 = "0.0"
				OuterRadius = "1.0"
			       	InnerRadius = "0.2"	/>	       
		</RANDOMACCEL>

		<KILLOLDALPHA age_limit = "1.0" scale = "0.5" />
		<FUNCTIONSIZE>
			<FUNCTION>
				<SAMPLE t = "0.0" v = "0.05" />
				<SAMPLE t = "1.5" v = "0.05" />
			</FUNCTION>
		</FUNCTIONSIZE>
		<MOVE move_velocity = "true" move_rotational_velocity = "false" />
	</SUBSYSTEM>
</SYSTEM_DEFINITION>
