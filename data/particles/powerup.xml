			<DOMAIN type = "POINT" 
				x0 = "0.0"
				z0 = "0.0"
				y0 = "0.5" />
		</GRAVITY>

		<KILLOLDALPHA age_limit = "0.7" scale = "1.0" />
		<FUNCTIONSIZE>
			<FUNCTION>
				<SAMPLE t = "0.0" v = "1.0" />
