<SYSTEM_DEFINITION name = "blue_bomb_explosion">
	<SUBSYSTEM max = "50" particleColorFactor = "1.0" >
		<TEXTURE diffuse = "estela.dds" />
		<BEHAVIOUR initTime = "0.0" finishTime = "0.6" >
			<SOURCE particle_rate = "10000">
				<DOMAIN type = "DISC" 
					x0 = "0.0"
					y0 = "0.1"
					z0 = "0.0"
					normalx = "0.0"
				    normaly = "1.0" 
					normalz = "0.0"

					OuterRadius = "1.0"
					InnerRadius = "0.0" />
	
				<VELOCITY>
					<DOMAIN type = "SPHERE"
						x0 = "0.0"
						z0 = "0.0"
						y0 = "0.0"
						x1 = "0.0"
						z1 = "0.0"
						y1 = "0.0"					
						OuterRadius = "0.2"
					    InnerRadius = "0.0"	/>	       
				</VELOCITY>
				<COLOR>
					<DOMAIN type = "POINT" 
						x0 = "1.0"
						y0 = "1.0"
						z0 = "1.0" />
					<DOMAIN type = "POINT" 
						x0 = "0.5"
						z0 = "0.0"
						y0 = "0.0" />
				</COLOR>
				<SIZE>
					<DOMAIN type = "POINT" 
						x0 = "1.0"
						z0 = "1.0"
						y0 = "1.0" />
				</SIZE>
			</SOURCE>
			<RANDOMACCEL>
				<DOMAIN type = "DISC"
					x0 = "0.0"
					z0 = "0.0"
					y0 = "0.0"
					normalx = "0.0"
					normaly = "1.0"
					normalz = "0.0"					
					OuterRadius = "10.0"
				  	InnerRadius = "10.0"	/>	       
			</RANDOMACCEL>

			<FUNCTIONSIZE>
			<FUNCTION>
				<SAMPLE t = "0.0" v = "0.01" />
				<SAMPLE t = "0.1" v = "2.35" />
				<SAMPLE t = "0.3" v = "0.1" />
			</FUNCTION>
		</FUNCTIONSIZE>
		<FUNCTIONALPHA>
			<FUNCTION>
				<SAMPLE t = "0.4" v = "1.0" />
				<SAMPLE t = "0.6" v = "0.0" />
			</FUNCTION>
		</FUNCTIONALPHA>

		<FUNCTIONCOLOR>
			<FUNCTION>
				<SAMPLE t = "0.0" v = "1.0" />
				<SAMPLE t = "0.6" v = "1.0" />
			</FUNCTION>
			<FUNCTION>
				<SAMPLE t = "0.0" v =  "0.0" />
				<SAMPLE t = "0.4" v =  "1.0" />
				<SAMPLE t = "0.5" v =  "0.5" />
			</FUNCTION>
			<FUNCTION>
				<SAMPLE t = "0.0" v = "0.0" />
				<SAMPLE t = "0.6" v = "0.0" />
			</FUNCTION>
		</FUNCTIONCOLOR>
		
		<MOVE move_velocity = "true" move_rotational_velocity = "true" />
		</BEHAVIOUR>
	</SUBSYSTEM>
	<SUBSYSTEM max = "16" particleColorFactor = "1.0" >
		<TEXTURE diffuse = "bomb_piece_blue.dds" />
		<BEHAVIOUR initTime = "0.0" finishTime = "0.6" >
			<SOURCE particle_rate = "1000">
				<DOMAIN type = "DISC" 
					x0 = "0.0"
					y0 = "0.4 "
					z0 = "0.0"
					normalx = "0.0"
				    normaly = "1.0" 
					normalz = "0.0"

					OuterRadius = "1.0"
					InnerRadius = "0.0" />
	
				<VELOCITY>
					<DOMAIN type = "CONE"
						x0 = "0.0"
						z0 = "0.0"
						y0 = "0.0"
						x1 = "0.0"
						z1 = "0.0"
						y1 = "9.0"					
						OuterRadius = "3.2"
						InnerRadius = "0.0"	/>	       
				</VELOCITY>
<!--
				<COLOR>
					<DOMAIN type = "POINT" 
						x0 = "0.0"
						y0 = "0.0"
						z0 = "1.0" />
					<DOMAIN type = "POINT" 
						x0 = "0.0"
						z0 = "0.0"
						y0 = "1.0" />
				</COLOR>
-->				
				<SIZE>
					<DOMAIN type = "POINT" 
						x0 = "0.1"
						z0 = "0.1"
						y0 = "0.1" />
				</SIZE>
			</SOURCE>
			<GRAVITY>
			<DOMAIN type = "POINT" 
				x0 = "0.0"
				z0 = "0.0"
				y0 = "-19.8" />
			</GRAVITY>
			<RANDOMACCEL>
				<DOMAIN type = "DISC"
					x0 = "0.0"
					z0 = "0.0"
					y0 = "0.0"
					normalx = "0.0"
					normaly = "1.0"
					normalz = "0.0"					
					OuterRadius = "15.0"
				  	InnerRadius = "0.0"	/>	       
			</RANDOMACCEL>

			<FUNCTIONSIZE>
				<FUNCTION>
					<SAMPLE t = "0.2" v = "0.5" />
					<SAMPLE t = "0.6" v = "0.4" />
				</FUNCTION>
			</FUNCTIONSIZE>
			<FUNCTIONALPHA>
				<FUNCTION>
					<SAMPLE t = "0.2" v = "1.0" />
					<SAMPLE t = "0.6" v = "1.0" />
				</FUNCTION>
			</FUNCTIONALPHA>
		<MOVE move_velocity = "true" move_rotational_velocity = "true" />
		</BEHAVIOUR>
	</SUBSYSTEM>
</SYSTEM_DEFINITION>
